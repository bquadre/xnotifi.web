
@{
    ViewBag.Title = "Requests Report";
}

<div class="row" style="padding-top:45px">

    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h2>@ViewBag.Title</h2>
        <div class="row">
            <div class="col-md-8">

                @using (Html.BeginForm("Report", "Home", FormMethod.Get, new { @class = "form-inline" }))
                {

                    <div class="form-group">
                        <div class="col-md-6">
                            <input type="text" name="s" class="form-control" placeholder="Search" />
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="e" class="form-control" placeholder="Search" />
                        </div>
                        <div class="col-md-2">
                            <input type="submit" class="btn btn-default" />
                        </div>
                    </div>

                }

            </div>
            <div class="col-md-4">
                <p class="pull-right">
                    @Html.ActionLink("Create New", "Create", "Applications", null, new { @class = "btn btn-primary" })
                </p>
            </div>
        </div>



        <table class="table">
            <tr>
                <th>
                    Date Created
                </th>
                <th>
                    SMS Requests
                </th>
                <th>
                    SMS Cost
                </th>
                <th>
                    Email Requests
                </th>

                <th>
                    Email Cost
                </th>

                <th>
                    Total Requests
                </th>
                <th>
                    Total Cost
                </th>
            </tr>
            @if (ViewBag.RangeRequests != null)
            {
                foreach (var item in ViewBag.RangeRequests)
                {

                    <tr>
                        <td>
                            @item.Date
                        </td>
                        <td>
                            @item.Sms
                        </td>

                        <td>
                            @item.SmsCost
                        </td>

                        <td>
                            @item.Email
                        </td>

                        <td>
                            @item.EmailCost
                        </td>
                        <td>
                            @{
                                var totalRequest = item.Sms + item.Email;
                                @totalRequest
                            }

                        </td>
                        <td>
                            @{
                                var totalCost = item.SmsCost + item.EmailCost;
                                @totalCost
                            }
                        </td>
                    </tr>
                }
            }
        </table>


    </div>
    <div class="col-md-2"></div>
</div>