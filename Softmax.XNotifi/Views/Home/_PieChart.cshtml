<canvas id="myPieChart" width="100" height="70"></canvas>
<script>
    var url = "https://localhost:44318/Home/Overall";
    $.get(url, function(data, status) {
        pieChart(data);
    });

    function pieChart(data) {
        var overall = document.getElementById("myPieChart").getContext('2d');
        var myDoughnutChart = new Chart(overall, {
            type: 'doughnut',
            data: {
                datasets: [{
                    data: data.totals,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }],

                // These labels appear in the legend and in the tooltips when hovering different arcs
                labels: [
                    'SMS',
                    'Email'
                ]
            },
            options: {}
        });
    }
</script>