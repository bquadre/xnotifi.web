<div class="table-responsive">
   
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Date</th>
            <th>Client</th>
            <th>Application</th>
            <th>AppId</th>
            <th>AppKey</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>Date</th>
            <th>Client</th>
            <th>Application</th>
            <th>AppId</th>
            <th>AppKey</th>
            <th>Status</th>
            <th></th>
        </tr>
        </tfoot>
        <tbody>
        @if (ViewBag.Applications != null)
        {
            foreach (var item in ViewBag.Applications)
            {
                <tr>
                    <td>
                        @item.DateCreated
                    </td>
                    <td>
                        @item.Client.Company
                    </td>
                         
                    <td>
                        <a href="@item.Url" target="_blank">@item.Name</a>
                    </td>
                         
                    <td>
                        @item.ApplicationId
                    </td>
                         
                    <td>
                        @item.Key
                    </td>
                    <td>
                        @if(item.IsActive){
                            <span class="badge badge-success">Active</span>
                        } else {
                            <span class="badge badge-danger">Inactive</span>
                        }
                     
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ApplicationId }, new { @class = "btn btn-outline-primary btn-sm" })
                        @Html.ActionLink("New Key", "NewKey", new {id = item.ApplicationId}, new {@class = "btn btn-outline-success btn-sm"})
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>