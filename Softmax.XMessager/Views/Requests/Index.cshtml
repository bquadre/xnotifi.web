@model List<Softmax.XMessager.Models.RequestModel>
    @using System.Globalization
    @using Softmax.XMessager.Data.Enums
    @{
        ViewBag.Title = "Requests List";
    }

    <div class="row" style="padding:45px 20px">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            <div class="row">
                <div class="col-md-10">

                    @using (Html.BeginForm("Index", "Requests", FormMethod.Get, new { @class = "form-inline" }))
                    {

                        <div class="form-group">
                            <div class="col-md-4">
                                <select name="s" class="form-control">
                                    <option value="">---Select One--</option>
                                    @foreach (var item in this.ViewBag.Applications)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                            </div>
                            <div class="col-md-4">
                                <input type="text" name="q" class="form-control" placeholder="Search" />

                            </div>
                            <div class="col-md-2">
                                <input type="submit" class="btn btn-default" />
                            </div>
                        </div>

                    }

                </div>
                
            </div>
            <table class="table">
                <tr>
                    <th>
                        Date Created
                    </th>
                    <th>
                        Client
                    </th>
                    <th>
                        Application
                    </th>
                    <th>
                        Service
                    </th>
                    <th>
                        Recipients
                    </th>
                    <th>
                        Cost
                    </th>
                </tr>

                @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.DateCreated
                        </td>
                        <td>
                            @item.Application.Client.Company
                        </td>

                        <td>
                            @item.Application.Name
                        </td>
                        <td>
                            @item.Gateway.ServiceCode

                        </td>

                        <td>
                            @item.Recipients

                        </td>
                        <td>
                            @item.Cost.ToString("C", new CultureInfo("en-NG"))
                        </td>
                    </tr>
                    }
                                }
            </table>

        </div>


    </div>

