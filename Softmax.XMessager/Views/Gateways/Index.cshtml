@model List<Softmax.XMessager.Models.GatewayModel>
@{
    ViewBag.Title = "Manage Gateways";
}

<div class="row" style="padding-top:45px">

    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h2>@ViewBag.Title</h2>
        <div class="row">
            <div class="col-md-8">
              
                    @using (Html.BeginForm("Index", "Gateways", FormMethod.Get, new { @class = "form-inline" }))
                    {
                         
                        <div class="form-group">
                            <div class="col-md-6">
                                <input type="text" name="q" class="form-control" placeholder="Search"/>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" class="btn btn-default"/>
                            </div>
                        </div>

                    }
                 
            </div>
            <div class="col-md-4">
                <p class="pull-right">
                    @Html.ActionLink("Create New", "Create", "Gateways", null, new { @class = "btn btn-primary" })
                </p>
            </div>
        </div>
       

       
        <table class="table">
            <tr>
                <th>
                    Date Created
                </th>
                <th>
                   Service
                </th>
                <th>
                    Provider
                </th>
               
                <th>
                    Username
                </th>

                <th>
                    Status
                </th>
                <th>

                </th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    
                     <tr>
                         <td>
                          @item.DateCreated
                         </td>
                         <td>
                             @item.ServiceCode
                         </td>
                         <td>
                            <a href="@item.ProviderUrl" target="_blank">@item.Provider</a>
                         </td>
                         
                         <td>
                             @item.Username
                         </td>
                         <td>
                             @if(item.IsActive){
                                 <span class="badge badge-success">Active</span>
                             } else {
                                 <span class="badge badge-danger">Inactive</span>
                             }
                     
                         </td>
                         <td>
                             @Html.ActionLink("Edit", "Edit", new {id = item.GatewayId}, new {@class = "btn btn-outline-primary btn-sm"})
                         </td>
                     </tr>
                 }
            }
        </table>
      

    </div>
    <div class="col-md-2"></div>
</div>
