<canvas id="myBarChart" width="100" height="50"></canvas>
<script>
    var url = "https://localhost:44318/Home/Monthly";
    $.get(url, function(data, status) {
            barChart(data);
        });

    function barChart(data) {
        var monthly = document.getElementById("myBarChart").getContext('2d');
        var chart = new Chart(monthly,
            {
                type: 'bar',
                data: {
                    labels: data.dates,
                    datasets: [
                        {
                            label: 'SMS',
                            data: data.sms,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255,99,132,1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }, {
                            label: 'Email',
                            data: data.email,
                            backgroundColor: [
                                'rgba(200, 199, 132, 0.2)',
                                'rgba(00, 62, 235, 0.2)',
                                'rgba(200, 200, 86, 0.2)',
                                'rgba(70, 92, 192, 0.2)',
                                'rgba(150, 100, 255, 0.2)',
                                'rgba(200, 150, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(200,199,132,1)',
                                'rgba(50, 62, 235, 1)',
                                'rgba(200, 200, 86, 1)',
                                'rgba(70, 92, 192, 1)',
                                'rgba(100, 100, 255, 1)',
                                'rgba(200, 150, 64, 1)'
                            ],
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    scales: {
                        yAxes: [
                            {
                                ticks: {
                                    beginAtZero: true
                                }
                            }
                        ]
                    }
                }
            });
    }
        
        
</script>