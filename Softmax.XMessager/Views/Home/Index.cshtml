@using System.Globalization
@using Microsoft.AspNetCore.Identity
@using Softmax.XMessager.Models
@using Softmax.XMessager.Data

@inject UserManager<ApplicationUser> UserManager

@{
ViewBag.Title = "Dashboard";
 }
<script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js" type="text/javascript"></script>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">My Dashboard</li>
    </ol>
    <!-- Icon Cards-->
    <div class="row">
        <div class="col-xl-4 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-money"></i>
                    </div>
                    @if (await UserManager.IsInRoleAsync(await UserManager.FindByNameAsync(User.Identity.Name), "Admin"))
                    {
                        <div class="mr-5">

                            @(ViewBag.AdminIncome > 0 ? ViewBag.AdminIncome.ToString("C", new CultureInfo("en-NG")) : ViewBag.Default)

                        </div>
                    }
                    else
                    {
                        <div class="mr-5">
                            @(ViewBag.UserBalance > 0? ViewBag.UserBalance.ToString("C", new CultureInfo("en-NG")) : ViewBag.Default)
                        </div>
                    }
                    
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    @if (await UserManager.IsInRoleAsync(await UserManager.FindByNameAsync(User.Identity.Name), "Admin"))
                    {
                        <span class="float-left">Total Income</span>
                    }
                    else
                    {
                        <span class="float-left">Account Balance</span>
                    }
                   
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        @*<div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-list"></i>
                    </div>
                    <div class="mr-5">100,000</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">Total Clients</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>*@
        <div class="col-xl-4 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-desktop"></i>
                    </div>
                   
                    @if (await UserManager.IsInRoleAsync(await UserManager.FindByNameAsync(User.Identity.Name), "Admin"))
                    {
                        <div class="mr-5">
                            @(ViewBag.AdminApplications > 0 ? ViewBag.AdminApplications : ViewBag.Default)
                        </div>
                    }
                    else
                    {
                        <div class="mr-5">
                            @(ViewBag.UserApplications > 0 ? ViewBag.UserApplications : ViewBag.Default)
                        </div>
                    }
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">Total Applications</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-3">
            <div class="card text-white bg-danger o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-handshake-o"></i>
                    </div>
                    
                    @if (await UserManager.IsInRoleAsync(await UserManager.FindByNameAsync(User.Identity.Name), "Admin"))
                    {
                        <div class="mr-5">
                            @(ViewBag.AdminRequests > 0 ? ViewBag.AdminRequests : ViewBag.Default)
                        </div>
                    }
                    else
                    {
                        <div class="mr-5">
                            @(ViewBag.UserRequests > 0 ? ViewBag.UserRequests : ViewBag.Default)
                        </div>
                    }
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">Total Requests</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <!-- Area Chart Example-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-area-chart"></i> Daily Analysis
        </div>
        <div class="card-body">
            @Html.Partial("_LineChart")
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
<div class="row">
<div class="col-lg-8">
<!-- Example Bar Chart Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-bar-chart"></i> Monthly Analysis
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-8 my-auto">
                @Html.Partial("_BarChart")
            </div>
            <div class="col-sm-4 text-center my-auto">
                <div class="h4 mb-0 text-primary">NGN34,693</div>
                <div class="small text-muted">YTD Loans</div>
                <hr>
                <div class="h4 mb-0 text-warning">NGN18,474</div>
                <div class="small text-muted">YTD Loans Refund</div>
                <hr>
                <div class="h4 mb-0 text-success">NGN16,219</div>
                <div class="small text-muted">YTD Margin</div>
            </div>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

</div>
<div class="col-lg-4">
    <!-- Example Pie Chart Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-pie-chart"></i> Overall Analysis
        </div>
        <div class="card-body">
            @Html.Partial("_PieChart")
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
     
</div>
</div>

    <!--List-->
<div class="row">
    <div class="col-md-12">
        <div class="card-header">
            <i class="fa fa-table"></i> Requests List
        </div>
        <div class="card-body">
             @Html.Partial("_DataTable")
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>
</div>
<!-- /.container-fluid-->